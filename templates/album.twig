{% extends "base.twig" %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ full_url_for('signIn2') }}assets/css/album.css"/>
{% endblock %}

{% block main %}

    <a href="{{ url_for('portfolio')}}">Go back</a>
    <h1>AlbumName</h1>
    <div class="image-container">

        <form id="add-object" class="image-base" action="{{url_for('album')~'/'~albumID}}" method="post">
            <label>
                Image URL<br>
                <input type="text" name="info">
            </label>
            <span id="title-error"></span>
            <input type="submit" value="ADD IMAGE">
        </form>


        {% for picture in pictures %}
            <div class="image image-base">
                <img src="{{ picture['pic_url'] }}" alt="">
                <form class="delete-object" name="{{ picture['id'] }}" action="{{url_for('album')~'/'~albumID}}">
                    <input type="submit" value="DELETE">
                </form>
            </div>
        {% endfor %}



    </div>

{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script
            type="application/javascript"
            src="{{ full_url_for('signIn2') }}assets/js/portfolioAJAX.js">
    </script>
{% endblock %}
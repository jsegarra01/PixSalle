<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block style %}
      <link rel="stylesheet" href="{{ full_url_for('signIn2') }}assets/css/base.css"/>
      <link rel="stylesheet" href="{{ full_url_for('signIn2') }}assets/css/baseUser.css"/>
    {% endblock %}
    {% block head %}
    {% endblock %}
    <title>{% block title %}{% endblock %}</title>
  </head>
  <body>
    {% block body %}
      {%block header%}
      <header>
        <nav>
          <ul class="main-menu">
            <li><a href="{{ url_for('explore') }}" class="{{currentPage[0] == 'explore' ? 'menu-selected' : ''}}">EXPLORE</a></li>
            <li>
              <a class="{{currentPage[0] == 'user' ? 'menu-selected' : ''}}">USER</a>
              <ul class="dropdown-menu">
                <li><a href="{{ url_for('wallet') }}" class="{{currentPage[1] == 'wallet' ? 'menu-selected' : ''}}">WALLET</a></li>
                <li><a href="{{ url_for('membership') }}" class="{{currentPage[1] == 'membership' ? 'menu-selected' : ''}}">MEMBERSHIP</a></li>
                <li></li>
              </ul>
            </li>
            <li><a href="" class="{{currentPage[0] == 'portfolio' ? 'menu-selected' : ''}}">PORTFOLIO</a></li>
            <li><a href="{{ url_for('profile') }}" class="{{currentPage[0] == 'profile' ? 'menu-selected' : ''}}">PROFILE</a></li>
          </ul>
          {% if notSigned %}
            <div class="sign-buttons">
              <a href="{{ url_for('signIn') }}" class="{{currentPage[0] == 'sign-in' ? 'menu-selected' : ''}}">SIGN-IN</a>
              <a href="{{ url_for('signUp') }}" class="{{currentPage[0] == 'sign-up' ? 'menu-selected' : ''}}">SIGN-UP</a>
            </div>
          {% endif %}
        </nav>
      </header>
      {% endblock %}
      <main>
        {% block main %}
        {% endblock %}
      </main>
      <footer>

      </footer>
    {% endblock %}
  </body>
</html>